# clawbot 环境变量配置文件

# Telegram Bot 配置
# 请在 @BotFather 获取 Bot Token
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE

# 管理员用户 ID 列表（逗号分隔）
# 可以通过 @userinfobot 获取您的用户 ID
TELEGRAM_ADMIN_IDS=123456789,987654321

# 执行配置
CLAUDE_CLI_PATH=claude
EXECUTION_TIMEOUT=300
CLAUDE_TUI_CMD=claude
TUI_SESSION_NAME=clawbot-claude
TUI_CAPTURE_LINES=200
TUI_CAPTURE_DELAY=3.0
TUI_LOG_FILE=tui_output.log
TUI_REPLY_MAX_LINES=40
TUI_REPLY_MAX_CHARS=4000
TUI_WAIT_ATTEMPTS=0
TUI_MAX_WAIT_SECONDS=120

# 工作目录配置
WORKSPACE_DIR=~/clawbot_workspace

# 安全配置
# 禁止的命令列表（逗号分隔）
# 例如：BLOCKED_COMMANDS=rm -rf,sudo,nc,ncat
BLOCKED_COMMANDS=rm -rf,sudo,nc,ncat

# 日志配置
LOG_LEVEL=INFO

# Redis 配置（用于任务队列）- 当前版本未实现
# REDIS_URL=redis://localhost:6379/0

# 是否启用沙盒
SANDBOX_ENABLED=True

# 代理配置（可选）
# 如果需要使用代理，取消下面几行的注释并配置正确的代理信息
# 支持 http、https、socks5 三种代理类型
# PROXY_TYPE=socks5
# PROXY_ADDRESS=127.0.0.1
# PROXY_PORT=7890
# PROXY_USERNAME=
# PROXY_PASSWORD=
